<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EBEBEB"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"

        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_change"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/wx_btn_bottom_selector"
                android:padding="10dip"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dip"
                    android:text="@string/change"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/btn_gray_normal"
                />


            <LinearLayout
                android:background="@color/common_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout

                    android:id="@+id/rl_switch_notification"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/wx_btn_bottom_selector"
                    android:padding="10dip"
                    android:onClick="onClick"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dip"
                        android:text="新消息提醒"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:typeface="serif" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="#E6E6E6" />

                <RelativeLayout
                    android:id="@+id/rl_switch_sound"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/wx_btn_bottom_selector"
                    android:padding="10dip"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dip"
                        android:text="勿扰模式"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:typeface="serif" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="#E6E6E6" />

                <RelativeLayout
                    android:id="@+id/rl_switch_vibrate"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/wx_btn_bottom_selector"
                    android:padding="10dip"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dip"
                        android:text="聊天"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:typeface="serif" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="#E6E6E6" />

                <RelativeLayout
                    android:id="@+id/rl_switch_speaker"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/wx_btn_bottom_selector"
                    android:padding="10dip"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dip"
                        android:text="通用"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:typeface="serif" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#E6E6E6" />

                <RelativeLayout
                    android:id="@+id/rl_switch_secret"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/wx_btn_bottom_selector"
                    android:padding="10dip"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dip"
                        android:text="隐私"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:typeface="serif" />


                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/common_bg"
                >
            <RelativeLayout
                android:id="@+id/rl_switch_delete_msg_when_exit_group"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/wx_btn_bottom_selector"
                android:padding="10dip"
                android:onClick="onClick">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dip"
                    android:text="账号与安全"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:typeface="serif" />


                </RelativeLayout>


                <TextView
                    android:id="@+id/textview6"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="#E6E6E6" />

                <RelativeLayout
                android:id="@+id/rl_switch_adaptive_video_encode"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/wx_btn_bottom_selector"
                android:padding="10dip"
                    android:onClick="onClick">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dip"
                    android:text="帮助与反馈"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:typeface="serif" />


                </RelativeLayout>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/wx_btn_style_alert_dialog_special"
                    android:text="退出登录"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:onClick="onClick"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
